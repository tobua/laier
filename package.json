{
  "name": "laier",
  "description": "Plugin to organize CSS z-index layers.",
  "version": "0.0.0-development",
  "repository": "github:tobua/laier",
  "homepage": "https://tobua.github.io/laier",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "tsconfig": {
      "compilerOptions": {
        "strict": true
      }
    }
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "color-string": "^1.9.1",
    "parse-color": "^1.0.0"
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "css",
    "layer",
    "z-index",
    "zIndex"
  ],
  "devDependencies": {
    "@types/color-convert": "^2.0.0",
    "@types/color-string": "^1.5.2",
    "@types/parse-color": "^1.0.1",
    "padua": "^1.3.1",
    "vitest": "^0.32.0"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 16"
  }
}
